<div class="container-fluid">
  <h2 class="text-center">ARTIST INFORMATION EDIT</h2>
  <p class="text-center <%= flash[:alert] ? 'text-danger' : '' %>"><%= flash[:notice] || flash[:alert] %></p>
  <%= render 'layouts/error', obj: @artist %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <%= form_with model: @artist, url: admin_artist_path(@artist) do |f| %>

          <p>選択した画像を削除できます</p>
          <div class="field d-flex justify-content-center m-5">
            <% @artist.artist_images.each do |image| %>
              <div class="delete-image-check">
                <%= f.check_box :artist_image_id, { multiple: true }, image.id, false %>
                <%= image_tag image.variant(resize: "200x100",
                  gravity: 'center', extent: "200x100").processed, class: "m-1 img-fluid" %>
              </div>
            <% end %>
          </div>

          <div class="field my-2">
            <%= f.file_field :artist_images, multiple: true, accept: "image/*" %>
            <p class="mt-3">画像は最大4個まで登録できます</p>
          </div>

          <div class="field text-left my-2">
            <%= f.label :name, "アーティスト名" %>
            <%= f.text_field :name, placeholder: "アーティスト名（255文字以下）",
              autofocus: true, class: "form-control" %>
          </div>

          <div class="field text-left my-2">
            <%= f.label :introduction, "紹介文" %>
            <%= f.text_area :introduction, placeholder: "紹介文（255文字以下）",
              class: "form-control", rows: 10 %>
          </div>

          <div class="field text-left my-2">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active_true, "公開" %>
            <%= f.radio_button :is_active, false, class: "ml-3" %>
            <%= f.label :is_active_false, "非公開" %>
          </div>

          <div class="actions m-3">
            <%= link_to  "キャンセル", admin_artist_path(@artist), class: "btn btn-secondary mr-3" %>
            <%= f.submit "保存", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "削除する", admin_artist_path(@artist), method: :delete,
          data: { confirm: "元には戻せません、本当に削除しますか？" } %>
      </div>
    </div>
  </div>
</div>