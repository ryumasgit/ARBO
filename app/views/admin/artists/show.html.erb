<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row d-flex justify-content-center m-3">
    <div class="col-md-3">
      <div class="images">
        <% @artist.artist_images.each do |image| %>
          <%= image_tag image.variant(resize: "600x400", gravity: 'center', extent: "600x400").processed %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3 d-flex justify-content-center align-items-center">
      <%= content_tag :h4, @artist.name %>
      <%= link_to edit_admin_artist_path(@artist), class: "btn" do %>
        <i class="fa-solid fa-gear align-top"></i>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <% if @artist.introduction.present? %>
      <%= @artist.introduction.scan(/.{1,85}/).join("<br>").html_safe %>
    <% end %>
  </div>
</div>
