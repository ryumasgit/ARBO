<div class="container-fluid">
  <h2 class="text-center">BADGE INFORMATION EDIT</h2>
  <p class="text-center"><%= flash[:notice] %></p>
  <%= render 'layouts/error', obj: @badge %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <%= form_with model: @badge, url: admin_badge_path(@badge) do |f| %>

          <div class="field m-5">
            <%= image_tag @badge.get_badge_image(200, 200), class: "rounded-circle img-fluid mb-3" %>
          </div>

          <div class="field my-2">
            <%= f.file_field :badge_image, accept: "image/*" %>
          </div>

          <div class="field text-left my-2">
            <%= f.label :name, "バッジ名" %>
            <%= f.text_field :name, placeholder: "バッジ名（255文字以下）", autofocus: true, class: "form-control" %>
          </div>

          <div class="field text-left my-2">
            <%= f.label :introduction, "紹介文" %>
            <%= f.text_area :introduction, placeholder: "紹介文（255文字以下）", class: "form-control", rows: 10 %>
          </div>

          <div class="field text-left my-2">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active_true, "公開" %>
            <%= f.radio_button :is_active, false, class: "ml-3" %>
            <%= f.label :is_active_false, "非公開" %>
          </div>

          <div class="actions m-3">
            <%= link_to  "キャンセル", admin_badge_path(@badge), class: "btn btn-secondary mr-3" %>
            <%= f.submit "保存", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "削除する", admin_badge_path(@badge), method: :delete, data: { confirm: "元には戻せません、本当に削除しますか？" } %>
      </div>
    </div>
  </div>
</div>