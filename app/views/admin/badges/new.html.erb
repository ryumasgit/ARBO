<div class="container-fluid">
  <h2 class="text-center">NEW BADGE CREATE</h2>
  <p class="text-center <%= flash[:alert] ? 'text-danger' : '' %>"><%= flash[:notice] || flash[:alert] %></p>
  <%= render 'layouts/error', obj: @badge %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <%= form_with model: @badge, url: admin_badges_path do |f| %>

          <div class="field m-5">
            <%= f.file_field :badge_image, accept: "image/*" %>
          </div>

          <div class="field text-left my-2">
            <p class="text-info text-center">バッジを登録した後、獲得条件追加をエンジニアに依頼して下さい。</p>
            <%= f.label :name, "バッジ名" %>
            <%= f.text_field :name, placeholder: "バッジ名（255文字以下）", autofocus: true, class: "form-control" %>
          </div>

          <div class="field text-left my-2">
            <%= f.label :introduction, "紹介文" %>
            <%= f.text_area :introduction, placeholder: "紹介文（255文字以下）", class: "form-control", rows: 10 %>
          </div>

          <div class="field text-left my-2">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active_true, "公開" %>
            <%= f.radio_button :is_active, false, class: "ml-3" %>
            <%= f.label :is_active_false, "非公開" %>
          </div>

          <div class="actions m-3">
            <%= link_to  "キャンセル", admin_badges_path, class: "btn btn-secondary mr-3" %>
            <%= f.submit "作成", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>