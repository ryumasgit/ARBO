<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row m-3">
    <div class="col text-right">
      <%= image_tag @badge.get_badge_image(500, 500) %>
    </div>
    <div class="col offset-1 d-flex align-items-center">
      <div class="row">
        <%= content_tag :h3, @badge.name %>
        <%= link_to edit_admin_badge_path(@badge), class: "btn" do %>
          <i class="fa-solid fa-gear align-top"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <% if @badge.introduction.present? %>
      <%= @badge.introduction.scan(/.{1,80}/).join("<br>").html_safe %>
    <% end %>
</div>
