<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
    <div class="row d-flex justify-content-center m-3">
      <div class="col-md-2">
        <div class="text-center">
          <%= image_tag @badge.get_badge_image(400, 400) %>
        </div>
      </div>
      <div class="col-md-2 d-flex justify-content-center align-items-center">
        <%= content_tag :h3, @badge.name %>
        <%= link_to edit_admin_badge_path(@badge), class: "btn" do %>
          <i class="fa-solid fa-gear align-top"></i>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center">
      <% if @badge.introduction.present? %>
        <%= @badge.introduction.scan(/.{1,80}/).join("<br>").html_safe %>
      <% end %>
    </div>
  </div>
</div>
