<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <h2>New Exhibition Create</h2>
        <%= form_with model: @exhibition, url: admin_exhibitions_path do |f| %>

          <div class="field m-5">
            <%= f.file_field :exhibition_images, multiple: true, accept: "image/*" %>
            <p class="mt-3">画像は最大4個まで登録できます</p>
          </div>

          <div class="field text-left my-2">
            <%= f.label :name, "展示会名" %>
            <%= f.text_field :name, placeholder: "展示会名", autofocus: true, class: "form-control" %>
          </div>

          <div class="field text-left my-2">
            <%= f.label :introduction, "紹介文" %>
            <%= f.text_area :introduction, placeholder: "紹介文（255文字以下）", class: "form-control", rows: 10 %>
          </div>

          <div class="field text-left my-2">
            <%= f.label :official_website, "公式WEBサイトURL" %>
            <%= f.text_area :official_website, placeholder: "公式WEBサイトURL（255文字以下）", class: "form-control" %>
          </div>

          <div class="field text-left my-4">
            <%= f.label :museum_id, "開催元の美術館" %>
            <%= f.collection_select :museum_id, Museum.where(is_active: true), :id, :name, prompt: "美術館を選択してください", class: "form-control" %>
          </div>

          <div class="field text-left my-4">
            <%= f.label :artists_ids, "参加アーティスト" %>
            <%= f.collection_select :artist_ids, Artist.where(is_active: true), :id, :name, { include_blank: false}, multiple: true, class: "form-control" %>
          </div>

          <div class="field text-left my-2">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active_true, "公開" %>
            <%= f.radio_button :is_active, false, class: "ml-3" %>
            <%= f.label :is_active_false, "非公開" %>
          </div>

          <div class="actions m-3">
            <%= link_to  "キャンセル", admin_museums_path, class: "btn btn-secondary mr-3" %>
            <%= f.submit "作成", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>