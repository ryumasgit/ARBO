<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row d-flex justify-content-center m-3">
    <div class="col-md-3">
      <div class="images">
        <% @exhibition.exhibition_images.each do |image| %>
          <%= image_tag image.variant(resize: "600x400", gravity: 'center', extent: "600x400").processed %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3 d-flex justify-content-center align-items-center">
      <%= content_tag :h4, @exhibition.name %>
      <%= link_to edit_admin_exhibition_path(@exhibition), class: "btn" do %>
        <i class="fa-solid fa-gear align-top"></i>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <% if @exhibition.introduction.present? %>
      <%= @exhibition.introduction.scan(/.{1,85}/).join("<br>").html_safe %>
    <% end %>
  </div>
  <div class="row justify-content-center m-3">
    <%= link_to "#{@exhibition.name} 公式サイト", @exhibition.official_website, target: "_blank" %>
  </div>
  <div class="row justify-content-center align-items-center">
    <i class="fa-solid fa-bookmark mr-1" aria-hidden="true"></i>
    <%= @exhibition.members.count %>
  </div>

  <div class="border mt-5"></div>
  <h2 class="text-center m-3">開催美術館</h2>
  <div class="row justify-content-center">
    <div class="text-center">
      <%= link_to admin_museum_path(@exhibition) do %>
        <%= @exhibition.museum.name %>
      <% end %>
    </div>
  </div>

  <div class="border mt-5"></div>
  <h2 class="text-center m-3">出展アーティスト</h2>
  <div class="row justify-content-center">
    <div class="text-center">
      <% @artists.each_slice(2) do |artists| %>
        <div class="d-flex">
          <% artists.each do |artist| %>
            <div class="d-flex flex-column m-5">
              <%= link_to admin_artist_path(artist) do %>
                <%= image_tag artist.artist_images.first.variant(resize: "400x300", gravity: 'center', extent: "300x200").processed, class: "mb-1" %>
              <% end %>
              <%= artist.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>