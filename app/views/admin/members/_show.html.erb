<div class="row m-3">
  <div class="col text-right">
    <%= image_tag member.get_member_image(160, 160), class: "rounded-circle img-fluid" %>
  </div>
  <div class="col">
    <div class="row">
      <h3><%= member.name %></h3>
      <%= link_to edit_admin_member_path(member), class: "btn btn-sm" do %>
        <i class="fa-solid fa-gear align-bottom" aria-hidden="true"></i>
    <% end %>
    </div>
    <div class="row">
      <% if member.introduction.present? %>
        <%= member.introduction.scan(/.{1,25}/).join("<br>").html_safe %>
      <% end %>
    </div>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <%= member.reviews.count %>レビュー
  <%= content_tag :span, member.earned_badges.count, class: "ml-3" %>バッジ
  <%= link_to admin_member_follows_path(member) do %>
    <p class="ml-3"><%= member.followings.where(members: { is_active: true }).count %>フォロー</p>
  <% end %>
  <%= link_to admin_member_followers_path(member) do %>
    <p class="ml-3"><%= member.followers.where(members: { is_active: true }).count %>フォロワー</p>
  <% end %>
</div>