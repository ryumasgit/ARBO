<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row justify-content-center">
    <div class="col-md-2">
      <div class="text-center">
        <h2>Member Information Edit</h2>
        <%= form_with model: @member, url: admin_member_path(@member) do |f| %>

          <div class="field m-5">
            <%= image_tag @member.get_member_image(200, 200), class: "rounded-circle mb-3" %>
            <%= f.file_field :member_image, accept: "image/*", class: "form-control-file" %>
          </div>

          <div class="field text-left">
            <%= f.label :member_name, "氏名" %>
            <%= f.text_field :name, placeholder: "メンバーネーム（25文字以下）", autofocus: true, class: "form-control mb-2" %>
          </div>

          <div class="field text-left">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_area :introduction, placeholder: "自己紹介（255文字以下）", class: "form-control mb-2", rows: 5 %>
          </div>

          <div class="field text-left">
            <%= f.label :email, "email" %>
            <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control mb-2" %>
          </div>

          <div class="field text-left">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active_true, "入会" %>
            <%= f.radio_button :is_active, false, class: "ml-3" %>
            <%= f.label :is_active_false, "退会" %>
          </div>

          <div class="actions m-3 mb-5">
            <%= link_to  "キャンセル", admin_member_path, class: "btn btn-secondary mr-3" %>
            <%= f.submit "保存", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>