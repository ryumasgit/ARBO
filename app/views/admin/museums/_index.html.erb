<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col">
      <table class="table border-bottom">
        <thead>
          <tr>
            <th></th>
            <th>美術館名</th>
            <th>ブックマーク</th>
            <th>公開ステータス</th>
          </tr>
        </thead>
          <tbody>
            <% museums.each do |museum| %>
            <tr>
              <td>
                <%= link_to admin_museum_path(museum) do %>
                  <%= image_tag museum.get_museum_images(65, 65), class: "rounded-circle" %>
                <% end %>
              </td>
              <td>
                <%= link_to admin_museum_path(museum) do %>
                  <%= museum.name %>
                <% end %>
              </td>
              <td><%= museum.bookmark_museums.count %></td>
              <td><%=museum_is_active_display(museum) %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>