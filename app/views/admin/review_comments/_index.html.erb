<% review_comments.each do |review_comment| %>
  <div class="card m-3">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to admin_member_path(review_comment.member) do %>
            <%= image_tag review_comment.member.get_member_image(100, 100), class: "rounded-circle img-fluid" %>
          <% end %>
        </div>
        <div class="col-9">
          <%= link_to admin_member_path(review_comment.member) do %>
            <h6 class="text-muted text-left"><%= review_comment.member.name %></h6>
          <% end %>
          <p class="text-dark text-left"><%= review_comment.comment %></p>
        </div>
        <div class="col-1">
          <%= link_to admin_review_review_comment_path(review_comment.review, review_comment), method: :delete, remote: true, data: {"turbolinks" => false}, class: "btn" do %>
            <i class="fa-solid fa-trash-can" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>