<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row justify-content-center">
    <div class="col-md-2">
      <div class="text-center">
        <h2>Admin Log In</h2>
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <%= render "admin/shared/error_messages", resource: resource %>

          <div class="field mt-5">
            <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
          </div>

          <div class="field">
            <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions m-3">
            <%= f.submit "Log in", class: "btn btn-success" %>
          </div>
        <% end %>
       </div>
    </div>
  </div>
</div>