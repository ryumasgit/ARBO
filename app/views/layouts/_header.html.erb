<div class="container-fluid">
  <div class="row m-4">
    <div class="col">
      <div id="notification-icon">
        <% if member_signed_in? %>
          <%= link_to notifications_path do %>
            <% if unchecked_notifications.any? %>
              <%= render 'layouts/notifications_with_alert' %>
            <% else %>
              <%= render 'layouts/notifications_without_alert' %>
            <% end %>
          <% end %>
        <% end %>
      </div>
     <div class="text-center">
        <%= link_to (admin_signed_in? ? admin_root_path : root_path) do %>
          <%= image_tag 'header_logo.png', width: '155px', height: 'auto' %>
        <% end %>
      </div>
    </div>
    <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>
  </div>
  <div id="sp-menu">
    <div class="row justify-content-center m-4">
      <div class="text-center">
        <% if member_signed_in? %>
          <div><%= link_to 'top', root_path, class: "btn" %></div>
          <div><%= link_to 'log out', destroy_member_session_path, method: :delete, class: "btn" %></div>
        <% elsif admin_signed_in? %>
          <div><%= link_to 'admin top', admin_root_path, class: "btn" %></div>
          <div><%= link_to 'admin log out', destroy_admin_session_path, method: :delete, class: "btn" %></div>
        <% else %>
          <div><%= link_to 'top', root_path, class: "btn" %></div>
          <div><%= link_to 'sign up', new_member_registration_path, class: "btn" %></div>
          <div><%= link_to 'log in', member_session_path, class: "btn" %></div>
        <% end %>
        <%= render '/layouts/header_sns_icons' %>
      </div>
    </div>
  </div>
</div>
