<div class="container-fluid">
  <div class="row m-4">
    <div class="col">
      <div class="text-center">
          <%= link_to root_path do %>
            <%= image_tag 'header_logo.png', width: '155px', height: 'auto' %>
          <% end %>
      </div>
    </div>
    <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>
  </div>
  <div id="sp-menu">
    <div class="row justify-content-center m-4">
      <div class="text-center">
        <% if member_signed_in? %>
          <div class="col-4">
            <div><%= link_to 'top', root_path, class: "btn" %></div>
            <div><%= link_to 'sign up', new_member_registration_path, class: "btn" %></div>
            <div><%= link_to 'log in', member_session_path, class: "btn" %></div>
            <div><%= link_to 'log out', destroy_member_session_path, method: :delete, class: "btn" %></div>
          </div>
          <div class="col-4">
            <div><%= link_to 'timeline', reviews_path, class: "btn" %></div>
            <div><%= link_to 'search', new_search_path, class: "btn" %></div>
            <div><%= link_to 'event', museums_path, class: "btn" %></div>
            <div><%= link_to 'mypage', member_my_page_path(member_user_name: current_member.user_name), class: "btn" %></div>
          </div>
        <% elsif admin_signed_in? %>
          <div class="col-4">
            <div><%= link_to 'top', root_path, class: "btn" %></div>
            <div><%= link_to 'sign up', new_member_registration_path, class: "btn" %></div>
            <div><%= link_to 'log in', member_session_path, class: "btn" %></div>
            <div><%= link_to 'log out', destroy_member_session_path, method: :delete, class: "btn" %></div>
          </div>
          <div class="col-4">
            <div><%= link_to 'timeline', admin_reviews_path, class: "btn" %></div>
            <div><%= link_to 'member', admin_members_path, class: "btn" %></div>
            <div><%= link_to 'event', admin_museums_path, class: "btn" %></div>
          </div>
        <% else %>
            <div><%= link_to 'top', root_path, class: "btn" %></div>
            <div><%= link_to 'sign up', new_member_registration_path, class: "btn" %></div>
            <div><%= link_to 'log in', member_session_path, class: "btn" %></div>
        <% end %>
        <i class="fa-brands fa-x-twitter"></i>
        <i class="fa-brands fa-instagram m-5"></i>
        <i class="fa-brands fa-facebook"></i>
      </div>
    </div>
  </div>
</div>
