<table class="table border-bottom m-3">
  <thead>
    <tr>
      <th></th>
      <th>アーティスト</th>
      <th>出展展示会</th>
    </tr>
  </thead>
    <tbody>
      <% artists.each do |artist| %>
      <tr>
        <td>
          <%= link_to artist_path(artist) do %>
            <%= image_tag artist.get_artist_images(100, 100) %>
          <% end %>
        </td>
        <td>
          <%= link_to artist_path(artist) do %>
            <%= artist.name %>
          <% end %>
        </td>
        <td>
          <%= artist.exhibitions.where(is_active: true).count %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>