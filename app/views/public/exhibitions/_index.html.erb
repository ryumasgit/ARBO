<table class="table table-hover border-bottom m-3">
  <thead>
    <tr>
      <th></th>
      <th>展示会</th>
      <th>開催美術館</th>
      <th><i class="fa-solid fa-bookmark" aria-hidden="true"></i></th>
      <th>感情分析スコア</th>
    </tr>
  </thead>
  <tbody>
    <% exhibitions.each do |exhibition| %>
    <tr>
      <td>
        <%= link_to exhibition_path(exhibition) do %>
          <%= image_tag exhibition.get_exhibition_images(100, 100), class: "img-fluid" %>
        <% end %>
      </td>
      <td>
        <%= link_to exhibition_path(exhibition) do %>
          <%= exhibition.name %>
        <% end %>
      </td>
      <td>
        <%= link_to museum_path(exhibition.museum) do %>
          <%= exhibition.museum.name %>
        <% end %>
      </td>
      <td><%= @bookmark_exhibition_counts[exhibition.id] %></td>
      <td>
        <% if @review[exhibition.id].present? %>
          <%= review_score_average(@review[exhibition.id]) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row justify-content-center">
  <%= paginate exhibitions %>
</div>