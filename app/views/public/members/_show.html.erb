<div class="row m-3">
  <div class="col text-right">
    <%= image_tag member.get_member_image(160, 160), class: "rounded-circle img-fluid" %>
  </div>
  <div class="col">
    <div class="row">
      <h3><%= member.name %></h3>
      <div class="col">
        <% if member == current_member %>
          <%= link_to member_information_edit_path(member_member_name: current_member.name), class: "btn btn-sm" do %>
            <i class="fa-solid fa-gear align-bottom" aria-hidden="true"></i>
          <% end %>
        <% else %>
          <div id="relationship_<%= member.id %>">
            <%= render 'public/relationships/btn', member: member %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if member.introduction.present? %>
        <%= member.introduction.scan(/.{1,25}/).join("<br>").html_safe %>
      <% end %>
    </div>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <%= member.reviews.count %>レビュー
  <span class="ml-3"><%= member.earned_badges.count %></span>バッジ
  <%= link_to member_follows_path(member_member_name: member.name) do %>
    <p class="ml-3"><%= member.followings.where(members: { is_active: true }).count %>フォロー</p>
  <% end %>
  <%= link_to member_followers_path(member_member_name: member.name) do %>
    <p class="ml-3"><%= member.followers.where(members: { is_active: true }).count %>フォロワー</p>
  <% end %>
</div>