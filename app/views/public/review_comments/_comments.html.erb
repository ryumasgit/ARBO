<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="text-center text-nowrap">
      <h3>REVIEW COMMENT</h3>
    </div>
  </div>
  <% unless current_member.is_guest? %>
    <%= render 'public/review_comments/form', review: review, review_comment: review_comment %>
  <% end %>
  <div id='review_comments'>
    <% if review_comments.present? %>
      <%= render "public/review_comments/index", review_comments: review_comments %>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate review_comments %>
  </div>
</div>