<% tab_attributes = { width: '150px', height: 'auto', class: "tab-responsive" } %>
<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row justify-content-center">
    <div class="text-center">
      <div class="tabs">
        <ul class="nav nav-tabs justify-content-center nav-justified">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#section1">
              <%= image_tag 'latest_logo.png', tab_attributes %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#section2">
              <%= image_tag 'follow_logo.png', tab_attributes %>
            </a>
          </li>
        </ul>
        <div class="tab-content border-top">
          <div id="section1" class="tab-pane fade show active">
            <%= render "index", reviews: @all_reviews %>
          </div>
          <div id="section2" class="tab-pane fade">
            <% if current_member.followings.present? %>
              <%= render "index", reviews: @following_member_reviews %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
