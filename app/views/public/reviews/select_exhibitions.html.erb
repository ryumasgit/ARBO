<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row justify-content-center">
    <div class="col">
      <h2 class="text-center">New Review Create</h2>
      <div class="text-center review-select-event">
        <h4 class="m-3">ご鑑賞になった展示会をお選びください</h4>
        <%= form_with model: @exhibitions, url: selected_exhibition_path do |f| %>
          <div class="field text-center my-4">
            <%= f.collection_select :exhibition_id, @selected_museum_id, :id, :name, prompt: "展示会を選択してください", class: "form-control" %>
          </div>
          <div class="actions m-3">
            <%= f.submit "レビュー記入へ", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
