<div class="container-fluid">
  <p class="text-center"><%= flash[:notice] %></p>
  <div class="row justify-content-center">
    <div class="col">
      <h2 class="text-center">New Review Create</h2>
      <div class="text-center review-select-event">
        <h4 class="m-3">足を運ばれた美術館をお選びください</h4>
        <%= form_with model: @museums, url: selected_museum_path do |f| %>
          <div class="field text-center my-4">
            <%= f.collection_select :museum_id, Museum.where(is_active: true), :id, :name, prompt: "美術館を選択してください", class: "form-control" %>
          </div>
          <div class="actions m-3">
            <%= f.submit "展示会選択へ", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
