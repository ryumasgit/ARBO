<div class="container-fluid my-5">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <%= form_with url: searches_path, method: :get do |f| %>
        <div class="row">
          <div class="col-8">
            <%= f.text_field :content, class: 'form-control' %>
          </div>
          <div class="col-4">
            <%= f.submit "検索", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>