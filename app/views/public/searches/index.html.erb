<div class="container-fluid my-5">
  <div class="row justify-content-center">
    <div class="text-center">
      <h3>SEARCH</h3>
      </div>
      <%= render 'form' %>
      <div class="tabs">
        <ul class="nav nav-tabs justify-content-center nav-justified">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#section1">
              <%= image_tag 'review_logo.png', width: '150px', height: 'auto', class: "tab-responsive" %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#section2">
              <%= image_tag 'member_logo.png', width: '150px', height: 'auto', class: "tab-responsive" %>
            </a>
          </li>
        </ul>
        <div class="tab-content border-top">
          <div id="section1" class="tab-pane fade show active">
            <%= render 'public/reviews/latest_index', reviews: @reviews %>
          </div>
          <div id="section2" class="tab-pane fade">
            <%= render 'public/members/index', members: @members %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>