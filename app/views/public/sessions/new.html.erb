<div class="container-fluid">
  <h2 class="text-center">MEMBER LOG IN</h2>
  <p class="text-center text-danger"><%= flash[:alert] %></p>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <%= form_with model: @member, url: member_session_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field mt-5">
            <%= f.email_field :email, placeholder: "メールアドレス",
            autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
          </div>

          <div class="field">
            <%= f.password_field :password, placeholder: "パスワード",
            autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions m-3">
            <%= f.submit "Log in", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to new_member_registration_path, class: "mr-5" do %>
          新規登録
        <% end %>
        <%= link_to guest_sign_in_path, method: :post do %>
          ゲストログイン
        <% end %>
       </div>
    </div>
  </div>
</div>